<?xml version="1.0" encoding="UTF-8" standalone="no"?>

<datamodel-sqltable xmlns="http://www.efaps.org/xsd"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.efaps.org/xsd http://www.efaps.org/xsd/eFaps_1.0.xsd">
    <uuid>6236b3ee-d0b0-4c63-bc5c-8d20e91502ec</uuid>
    <file-application>eFapsApp-Mail</file-application>
    

    <definition>
        <version-expression>(version==latest)</version-expression>
        <name>Mail_TemplateSQLTable</name>
        <typeid-column>TYPEID</typeid-column>
        <database>
            <table-name>T_MAILTEMPL</table-name>
            <column name="COMPANYID"       type="INTEGER"         not-null="true"/>
            <column name="TYPEID"          type="INTEGER"         not-null="true"/>
            <column name="NAME"            type="STRING_SHORT"    not-null="true" length="128" />
            <column name="SERVER"          type="STRING_SHORT"    not-null="true" length="128" />
            <column name="DESCR"           type="STRING_SHORT"                    length="256" />
            <column name="SUBJECT"         type="STRING_SHORT"                    length="256" />
            <column name="TEMPLATE"        type="STRING_SHORT"                    length="2048" />
            <column name="HTML"            type="BOOLEAN"         not-null="true" />
            <column name="CREATOR"         type="INTEGER"         not-null="true"/>
            <column name="CREATED"         type="DATETIME"        not-null="true"/>
            <column name="MODIFIER"        type="INTEGER"         not-null="true"/>
            <column name="MODIFIED"        type="DATETIME"        not-null="true"/>
            <foreign name="T_MAILTEMPL_FK_COMPANYID" key="COMPANYID"     reference="T_USERABSTRACT(ID)"/>
            <foreign name="T_MAILTEMPL_FK_CRTR"      key="CREATOR"       reference="T_USERPERSON(ID)"/>
            <foreign name="T_MAILTEMPL_FK_MDFR"      key="MODIFIER"      reference="T_USERPERSON(ID)"/>
        </database>
    </definition>
</datamodel-sqltable>